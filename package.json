{
  "name": "node-opcua-crypto",
  "version": "3.0.0-beta.0",
  "description": "Crypto tools for Node-OPCUA",
  "main": "./index.js",
  "types": "./index.d.ts",
  "browser": "./index_web.js",
  "exports": {
    ".": {
      "import": {
        "default": "./dist-esm/index.js"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    }
  },
  "scripts": {
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json ./tsconfig-test.cjs.json",
    "build:clean": "npx rimraf ./dist ./dist-*",
    "build": "npm run build:clean && npm run compile && node ./scripts/prepare-package-json.mjs",
    "prepare": "npm run build",
    "tslint": "tslint --project . --fix",
    "lint": "eslint . --ext .ts",
    "test:esm": "mocha test -r ts-node/register -r source-map-support/register -R spec --recursive --timeout 200000 --bail",
    "test:cjs": "mocha dist-test  -r source-map-support/register -R spec --recursive --timeout 200000 --bail",
    "test": "npm run test:esm && npm run test:cjs",
    "makedoc": "npx typedoc -out doc",
    "cost-of-modules": "npx cost-of-modules --no-install",
    "release-it": "npx release-it",
    "prettier-format": "prettier --config .prettierrc.js lib/**/*.ts test/**/*.ts --write",
    "ncu": "npx npm-check-updates -u -x env-paths,chalk"
  },
  "keywords": [
    "OPCUA",
    "opcua",
    "m2m",
    "iot",
    "opc ua",
    "internet of things"
  ],
  "author": "Etienne Rossignon",
  "license": "MIT",
  "engine": {
    "node": ">15.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lorem-ipsum": "^2.0.8",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "should": "^13.2.3",
    "source-map": "^0.7.4",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.4.3",
    "@peculiar/x509": "^1.9.3",
    "@types/jsrsasign": "^10.5.8",
    "better-assert": "^1.0.2",
    "chalk": "^4.1.2",
    "hexy": "0.3.4",
    "jsrsasign": "^10.8.6",
    "sshpk": "^1.17.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/node-opcua/node-opcua-crypto.git"
  },
  "bugs": {
    "url": "https://github.com/node-opcua/node-opcua-crypto/issues"
  }
}
