{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "listFiles": false,
        "traceResolution": false,
        "incremental": true,
        "types": ["node", "mocha", "should"],
        "rootDir": "."
    },
    "include": ["./source/*.ts", "./source_nodejs/*.ts", "source/x509/*.ts" ]
}
